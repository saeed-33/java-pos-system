<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.NavButtonWidget" parent="Widget.MaterialComponents.Button">

        <!-- Text -->
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/nav_button_text_color</item>

        <!-- Icon -->
        <item name="iconTint">@color/nav_button_icon_color</item>
        <item name="iconTintMode">src_in</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">24dp</item>
        <item name="iconSize">56dp</item>

        <!-- Size -->
        <item name="android:minWidth">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <!-- Spacing -->
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>

        <!-- Background -->
        <item name="background">@null</item>
        <item name="backgroundTint">@color/nav_button_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="elevation">0dp</item>

    </style>



</resources>
